<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Logged And Tasks</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/styles/style.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body class="body">

    <div class="container">
        <div class="jumbotron" id="jumbo">
            <h2><b><a href="/logout">Logout</a></b></h2>
            <h2><b>Hello : <%=data.username%><br></b></h2>
            <h2><b>Email : <%=data.email%></b></h2><br>
            <% for(var i=0; i<userArray.length ; i++){ %>
                <h3><b>User : <%=userArray[i].username%> with Email Id: <%=userArray[i].email%></b></h3>
                <ul>
                    <% for(var j=0,cnt=0; j<taskArray.length ; j++){ %>
                        <%if(taskArray[j].email === userArray[i].email){%>
                            <h3><b>Task : <%=(cnt+1)%></b></h3>
                            <%cnt=cnt+1%>
                            <li><h4><b>Task : <%=taskArray[j].text%></b></h4></li>
                            <li><b>Id : <%=taskArray[j]._id%></b></li>
                        <%}%>
                    <%}%>
                </ul>
            <%}%>
            <a href="/delete"><h3><b>Delete Task</b></h3></a>
        </div>
    </div>
</body>
</html>